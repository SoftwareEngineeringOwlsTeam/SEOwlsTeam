            android:name=".MainActivity"
            android:label="Main Screen" />
        <activity
            android:name=".LocationGeneration"
            android:label="ERROR LEAVE LEAVE ERROR" />
        <activity
            android:name=".LogInScreen"
            android:label="Log In"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".GroupManager"
            android:label="Group Manager" />
        <activity
            android:name=".UserSettings"
            android:label="Settings" />
        <activity
            android:name=".UserAccountManager"
            android:label="Account Manager" />
        <activity
            android:name=".IOtester"
            android:label="@string/title_activity_iotester"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".GroupCreator" />
        <activity android:name=".GroupView" />
        <activity android:name=".GroupAuditLog" />
        <activity android:name=".GroupMembers" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

        <activity android:name=".UserCreate" />
        <activity android:name=".PinView"></activity>
    </application>

</manifest>