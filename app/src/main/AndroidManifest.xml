<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.user.treasurehunter">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:name =".pinArray"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".GUISplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".PinActivity"
            android:label="Pin Selection" />
        <activity android:name=".PinCreateActivity"
            android:label="Pin Creation"/>
        <activity android:name=".LocationTester"
            android:label="Location Tester"/>
        <activity android:name=".MainActivity" />
        <activity android:name=".location_generation"></activity>
    </application>

</manifest>